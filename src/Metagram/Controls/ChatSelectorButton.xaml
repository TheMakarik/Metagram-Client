<UserControl x:Class="Metagram.Controls.ChatSelectorButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Metagram.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="700">

    <Grid>
        <DockPanel>
            <Image x:Name="Image_ChatIcon" DockPanel.Dock="Left" Margin="5" Width="140"/>
            <TextBlock x:Name="TextBlock_LastMessage" DockPanel.Dock="Bottom" Height="30" Margin="5,0,5,15"/>
            <TextBlock x:Name="TextBlock_ChatName" Margin="5"/>
        </DockPanel>
    </Grid>
    
</UserControl>
