<UserControl x:Class="Metagram.Controls.ChatSelectorButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Metagram.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="400" x:Name="this">
    
    <Grid Height="50">
        <Button Panel.ZIndex="0" Style="{DynamicResource buttonTemplate}" Click="Button_Click"/>
        <DockPanel Panel.ZIndex="1" IsHitTestVisible="False">
            <local:ClippingBorder DockPanel.Dock="Left" CornerRadius="100" ClipToBounds="True" Margin="5" Width="40">
                <Image x:Name="Image_ChatIcon"/>
            </local:ClippingBorder>

            <TextBlock DockPanel.Dock="Bottom" Margin="5,0,5,5" Height="10" Text="testLastMessage" Foreground="#7F91A4" FontSize="7"/>
            <TextBlock x:Name="TextBlock_ChatName" Margin="5" Text="{Binding SelectedChat.Title, ElementName=this, FallbackValue=testChatName}" FontSize="15" Foreground="White" TextAlignment="Left" VerticalAlignment="Center" Height="20"/>
        </DockPanel>   
    </Grid>

    <UserControl.Resources>
        <Style x:Key="buttonTemplate" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle x:Name="rect" Fill="#17212B"/>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="rect" Property="Fill" Value="#202b36"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
</UserControl>
