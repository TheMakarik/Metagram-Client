<UserControl x:Class="Metagram.Controls.ChatsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Metagram.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300" x:Name="this">

    <ItemsControl ItemsSource="{Binding BotMemory.Chats, ElementName=this}">
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <local:ChatSelectorButton SelectedChat="{Binding}"/>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>

</UserControl>
