<Window x:Class="Metagram.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Metagram"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Metagram.Controls"
    mc:Ignorable="d"
    Height="450" Width="800"
    Icon="/Assets/Icon.ico"
    Title="Metagram client v.0.1">

    <Grid>
        <DockPanel>
            <controls:ChatsPanel x:Name="chatsPanel" DockPanel.Dock="Left"/>
            <controls:ChatPresenter x:Name="chatPresenter"/>
        </DockPanel>
    </Grid>
    
</Window>
