{
  "Serilog": {
    "Using": ["Serilog.Sinks.File", "Serilog.Sinks.Console"],
    "MinimumLevel": "Debug",
    "Enrich": ["WithThreadId"],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm}] [Thread: {ThreadId}] [{Level}] [From: {SourceContext}] {Message:lj} {Exception}{NewLine}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "%METAGRAM_LOGS%/log_.txt",
          "outputTemplate":  "[{Timestamp:yyyy-MM-dd HH:mm}] [Thread: {ThreadId}] [{Level}] [From: {SourceContext}] {Message:lj} {Exception}{NewLine}",
          "rollingInterval": "Day"
        }
      }
    ]
  }
}